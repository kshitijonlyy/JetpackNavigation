<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Fragment2">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/marginTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/marginBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.95" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/marginLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/marginRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />


        <TableLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/marginBottom"
            app:layout_constraintEnd_toStartOf="@id/marginRight"
            app:layout_constraintStart_toEndOf="@id/marginLeft"
            app:layout_constraintTop_toBottomOf="@id/marginTop">

            <TableRow>

                <TextView
                    android:id="@+id/lblName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#C3C1C1"
                    android:paddingVertical="10dp"
                    android:paddingStart="10dp"
                    android:text="Name:"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/black"
                    android:paddingVertical="10dp"
                    android:paddingStart="10dp"
                    android:textColor="@color/white"
                    android:textSize="20dp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/lblPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:background="#C3C1C1"
                    android:paddingVertical="10dp"
                    android:paddingStart="10dp"
                    android:text="Phone NUmber:"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txtPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:background="@color/black"
                    android:paddingVertical="10dp"
                    android:paddingStart="10dp"
                    android:textColor="@color/white"
                    android:textSize="20dp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/lblMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:background="#C3C1C1"
                    android:paddingVertical="10dp"
                    android:paddingStart="10dp"
                    android:text="Amount:"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txtMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:background="@color/black"
                    android:paddingVertical="10dp"
                    android:paddingStart="10dp"
                    android:textColor="@color/white"
                    android:textSize="20dp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:id="@+id/lblBool"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:background="#C3C1C1"
                    android:paddingVertical="10dp"
                    android:paddingStart="10dp"
                    android:text="True/False:"
                    android:textSize="20dp" />

                <RadioGroup
                    android:id="@+id/rGrp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:background="@color/black"
                    android:orientation="vertical"
                    android:paddingStart="10dp">

                    <RadioButton
                        android:id="@+id/rbTrue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="#FFFFFF"
                        android:clickable="false"
                        android:text="True"
                        android:textColor="@color/white" />

                    <RadioButton
                        android:id="@+id/rbFalse"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:buttonTint="#FFFFFF"
                        android:clickable="false"
                        android:text="False"
                        android:textColor="@color/white" />
                </RadioGroup>
            </TableRow>
        </TableLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>